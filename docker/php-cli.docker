FROM php:8.0-cli

RUN apt-get update && apt-get install -y mariadb-client wget unzip \
    && docker-php-ext-install pdo_mysql pcntl

RUN wget https://getcomposer.org/installer -O - -q | php -- --version=2.0.11 --install-dir=/bin --filename=composer --quiet

ENV COMPOSER_ALLOW_SUPERUSER 1

WORKDIR /var/www
